# appearance
theme = "triplea"
font-family = "Agave Nerd Font"
font-size = 16
adjust-cell-height = 6

# window settings
window-decoration = false
window-padding-x = 8
window-padding-y = 2
window-padding-balance = true
class = ghostty
confirm-close-surface = false

# gtk settings
gtk-toolbar-style = flat
gtk-tabs-location = bottom
gtk-wide-tabs = false

# mouse settings
mouse-hide-while-typing = true

# reload config
keybind = ctrl+shift+r=reload_config

# split panes with prefix
keybind = ctrl+s>o=new_split:down
keybind = ctrl+s>e=new_split:right
keybind = ctrl+s>v=new_split:right
keybind = ctrl+s>b=new_split:down

# zoom split
keybind = ctrl+s>z=toggle_split_zoom

# new tab with prefix
keybind = ctrl+s>c=new_tab

# resize splits with ctrl+shift+arrow
keybind = ctrl+shift+left=resize_split:left,20
keybind = ctrl+shift+right=resize_split:right,20
keybind = ctrl+shift+up=resize_split:up,20
keybind = ctrl+shift+down=resize_split:down,20

# navigate splits with alt+arrow
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = alt+up=goto_split:top
keybind = alt+down=goto_split:bottom

# navigate tabs with shift+arrow
keybind = shift+left=previous_tab
keybind = shift+right=next_tab
